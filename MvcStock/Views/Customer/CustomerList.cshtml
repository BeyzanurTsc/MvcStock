@using MvcStock.Models.Entity
@model List<TBL_CUSTOMER>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tblCustomer" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>Emin misiniz?</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cstmr in Model)
        {
            <tr>
                <td>@cstmr.CUSTOMERID</td>
                <td>@cstmr.CUSTOMERNAME</td>
                <td>@cstmr.CUSTOMERSURNAME</td>
                <td><a href="/Customer/DeleteCustomer/@cstmr.CUSTOMERID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Customer/GetCustomer/@cstmr.CUSTOMERID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("SİL", "DeleteCustomer", new { id = cstmr.CUSTOMERID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek istediğinize emin misiniz?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Customer/AddCustomer" class="btn btn-info">MÜŞTERİ EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $('#tblCustomer').DataTable();
</script>