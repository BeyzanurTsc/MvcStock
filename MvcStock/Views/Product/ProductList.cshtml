@using MvcStock.Models.Entity
@model List<TBLPRODUCT>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("ProductList", "Product", FormMethod.Get))
            {
                <p>
                   <b> Ürün Adı :</b> @Html.TextBox("pt")
                    <input type="submit" value="Ara"/>
                </p>
            }

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>MARKA</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prdct in Model)
        {
            <tr>
                <td>@prdct.PRODUCTID</td>
                <td>@prdct.PRODUCTNAME</td>
                <td>@prdct.PRODUCTBRAND</td>
                <td>@prdct.TBL_CATEGORY.CATEGORYNAME</td>
                <td>@prdct.PRODUCTPRICE</td>
                <td>@prdct.PRODUCTSTOCK</td>
                <td><a href="/Product/DeleteProduct/@prdct.PRODUCTID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/GetProduct/@prdct.PRODUCTID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/AddProduct" class="btn btn-info">ÜRÜN EKLE</a>

